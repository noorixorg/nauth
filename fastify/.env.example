# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL (default)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=nauth_sample

API_BASE_URL=http://localhost:3000

# Frontend base URL — used for email verification links and as a fallback in
# social OAuth redirects. Each frontend passes its own absolute returnTo URL
# so this only matters for email link generation.
FRONTEND_BASE_URL=http://localhost:4200

# Cookie settings — lax + insecure is correct for HTTP localhost.
# For HTTPS cross-site production: set secure=true, same_site=none, domain=.yourdomain.com
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
COOKIE_DOMAIN=

# MySQL (alternative — swap the database package in package.json)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USERNAME=your_db_username
# DB_PASSWORD=your_db_password
# DB_DATABASE=nauth_sample

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=development
PORT=3000

# ============================================================================
# JWT Secrets (REQUIRED)
# ============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

# Symmetric (HS256) — simplest for getting started
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================================================
# Email Configuration (OPTIONAL)
# ============================================================================
TEMPLATE_APP_NAME=My Application
TEMPLATE_COMPANY_NAME=My Company Inc.
TEMPLATE_SUPPORT_EMAIL=noreply@example.com

# ============================================================================
# Social OAuth Providers (OPTIONAL)
# ============================================================================
# Google OAuth — https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
